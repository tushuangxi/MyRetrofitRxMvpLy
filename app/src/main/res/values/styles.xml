    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/gray_backgroud</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="BaseSplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bkg_splash</item>//在加载数据过程中, 启动页面也需要处理系统留白, 并且全屏显示.
    </style>

    <style name="SplashTheme" parent="BaseSplashTheme"/>


    <!--加载进度Dialog-->
    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>
    <style name="CustomProgressDialog" parent="@style/CustomDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">false</item>

    </style>

    <!--加载进度 gif_dialog-->
    <style name="gif_dialog"
        parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <!--SimpleToolbar 样式-->
    <style name="SimpleToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/red</item>
        <item name="android:layout_height">55dp</item>
        <item name="stb_title_text_color">@color/black</item>
        <item name="stb_title_text_size">18dp</item>
        <item name="stb_right_text_color">@color/blue</item>
        <item name="stb_right_text_size">16dp</item>
    </style>
</resources>
